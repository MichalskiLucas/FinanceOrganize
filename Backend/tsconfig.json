{
  "compilerOptions": {
    "target": "ES2020",               // Versão moderna do JS
    "module": "CommonJS",             // Necessário para Node.js
    "rootDir": "./src",               // Onde está o código-fonte
    "outDir": "./dist",               // Onde serão gerados os arquivos compilados
    "strict": true,                   // Ativa todas as verificações de tipo
    "esModuleInterop": true,          // Permite importar módulos como 'import express from "express"'
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,             // Ignora checagem de tipos em libs
    "moduleResolution": "node",       // Resolve módulos no estilo Node
    "resolveJsonModule": true,        // Permite importar arquivos JSON
    "noImplicitAny": false            // (opcional) Deixa o TypeScript mais flexível no início
  },
  "include": ["src"],                 // Pasta com o código
  "exclude": ["node_modules"]         // Ignora dependências
}
